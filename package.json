{
  "name": "mercurius",
  "version": "1.0.0",
  "description": "",
  "main": "app/main/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "concurrently \"npm run start:render\" \"wait-on http://localhost:3000 && npm run start:main\"",
    "start:main": "electron .",
    "start:render": "cd app/renderer/src/main && yarn start",
    "build:render": "cd app/renderer/src/main && yarn build",
    "build:mac": "npm run build:render && electron-builder --mac",
    "build:win": "npm run build:render && electron-builder --win --ia32",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paopaomo/remote-control.git"
  },
  "author": "Zi Ye",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/paopaomo/remote-control/issues"
  },
  "homepage": "https://github.com/paopaomo/remote-control#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "13.6.6",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.0"
  },
  "dependencies": {
    "electron-about-window": "^1.13.2",
    "electron-is-dev": "^1.2.0",
    "robotjs": "^0.6.0",
    "vkey": "^1.0.1",
    "ws": "^7.4.1"
  },
  "build": {
    "appId": "com.paopaomo.mercurius",
    "productName": "Mercurius",
    "files": "app",
    "asar": false,
    "extraFiles": [
      "app/renderer/**/src"
    ],
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2020 paopaomo",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icon.icns"
    },
    "dmg": {
      "background": "resources/background.png",
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    }
  }
}
